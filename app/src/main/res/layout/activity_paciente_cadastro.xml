<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_paciente_cadastro"
    android:padding="20dp"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginTop="90dp">

        <EditText
            android:id="@+id/editNomePaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Nome"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editCPFPaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="CPF"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editRGPaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="RG"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="number" />

        <EditText
            android:id="@+id/editDataNascimentoPaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="Data de Nascimento"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="date" />

        <EditText
            android:id="@+id/editTelefonePaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="Telefone"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="phone" />

        <EditText
            android:id="@+id/editEmailPaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="Email"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/editSenhaPaciente"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:hint="Senha"
            android:padding="15dp"
            android:background="@drawable/botao_bege_borda_laranja"
            android:textColor="#000000"
            android:textSize="16sp"
            android:inputType="textPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCadastrarPaciente"
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/botao_circular_azul"
            android:text="Cadastrar"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:theme="@style/ThemeOverlay.AppCompat"
            app:backgroundTint="@null" />

    </LinearLayout>
</ScrollView>
