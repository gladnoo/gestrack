<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_login"
    android:paddingHorizontal="16dp"
    android:paddingVertical="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="540dp"
        android:paddingHorizontal="120dp">

        <!-- Botão Login -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLoginPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:background="@drawable/botao_circular_azul_principal"
            android:paddingVertical="25dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"/>

        <!-- Botão Cadastra-se -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCadastroPaciente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="55dp"
            android:background="@drawable/botao_circular_azul_principal"
            android:paddingVertical="25dp"
            android:text="Cadastra-se"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold"
            android:stateListAnimator="@null"/>

    </LinearLayout>
</ScrollView>
