<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayoutPaciente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo_paciente_calendario"
    android:padding="20dp">

    <CalendarView
        android:id="@+id/calendarViewPaciente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:weekDayTextAppearance="@style/WeekDayText1"
        android:dateTextAppearance="@style/DateText" />

    <ImageButton
        android:id="@+id/btnAddSintoma"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@id/calendarViewPaciente"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="24dp"
        android:backgroundTint="#F4A361"
        android:contentDescription="Adicionar Sintoma"
        android:src="@android:drawable/ic_input_add"
        android:tint="#FFFFFF" />

</RelativeLayout>
